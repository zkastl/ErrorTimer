<UserControl x:Class="ErrorTimer.View.ErrorTimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ErrorTimer"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid VerticalAlignment="Center" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Start" Margin="5" Width="100" Height="30" IsEnabled="{Binding startIsEnabled}" Command="{Binding startButtonClickCommand}" />
        <Button Grid.Column="1" Content="Report Error" Margin="5" Width="100" IsEnabled="{Binding reportIsEnabled}" Command="{Binding reportButtonClickCommand}"/>
        <Button Grid.Column="2" Content="Stop" Margin="5" Width="100" IsEnabled="{Binding stopIsEnabled}" Command="{Binding stopButtonClickCommand}"/>
    </Grid>
</UserControl>
